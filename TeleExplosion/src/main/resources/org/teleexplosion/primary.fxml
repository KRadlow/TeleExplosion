<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="primaryScene" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.teleexplosion.controlers.PrimaryController">
   <VBox alignment="CENTER" layoutX="350.0" layoutY="247.0" prefHeight="200.0" prefWidth="100.0" spacing="36.0">
      <Button fx:id="playButton" alignment="CENTER" mnemonicParsing="false" onAction="#switchToGameMenu"
              prefHeight="35.0" prefWidth="150.0" text="play">
         <font>
            <Font name="Impact" size="18.0"/>
         </font>
      </Button>
      <Button fx:id="logButton" alignment="CENTER" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="35.0"
              prefWidth="150.0" text="log in">
         <font>
            <Font name="Impact" size="18.0"/>
         </font>
      </Button>
      <Button fx:id="exitButton" alignment="CENTER" mnemonicParsing="false" onAction="#exit" prefHeight="35.0"
              prefWidth="150.0" text="exit">
         <font>
            <Font name="Impact" size="18.0"/>
         </font>
      </Button>
   </VBox>
   <ImageView fx:id="logo" fitHeight="120.0" fitWidth="500.0" layoutX="150.0" layoutY="118.0" pickOnBounds="true"
              preserveRatio="true"/>
</AnchorPane>
